<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enregistrer"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <ImageView
        android:id="@id/imgprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@id/idtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom"
        app:layout_constraintTop_toBottomOf="@id/imgprofile"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp" />

    <!-- EditText: Nom -->
    <EditText
        android:id="@id/editNom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Entrez votre nom"
        app:layout_constraintStart_toEndOf="@id/idtxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/idtxt"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp" />

    <!-- Label: Prénom -->
    <TextView
        android:id="@id/idtxt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prénom"
        app:layout_constraintTop_toBottomOf="@id/idtxt"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp" />

    <!-- EditText: Prénom -->
    <EditText
        android:id="@id/editPrenom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Entrez votre prénom"
        app:layout_constraintStart_toEndOf="@id/idtxt2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/idtxt2"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp" />

    <!-- Label: Contact -->
    <TextView
        android:id="@id/idtxt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact"
        app:layout_constraintTop_toBottomOf="@id/idtxt2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp" />

    <!-- EditText: Contact -->
    <EditText
        android:id="@id/editContact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Entrez votre contact"
        android:inputType="phone"
        app:layout_constraintStart_toEndOf="@id/idtxt3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/idtxt3"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp" />

    <!-- Label: Paragraphe -->
    <TextView
        android:id="@id/idtxt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paragraphe"
        app:layout_constraintTop_toBottomOf="@id/idtxt3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp" />

    <!-- EditText: Long Paragraph -->
    <EditText
        android:id="@id/editParagraph"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:hint="Entrez votre paragraphe ici..."
        android:gravity="top|start"
        android:inputType="textMultiLine"
        android:minLines="5"
        android:background="@android:drawable/editbox_background"
        app:layout_constraintTop_toBottomOf="@id/idtxt4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp" />




</androidx.constraintlayout.widget.ConstraintLayout>